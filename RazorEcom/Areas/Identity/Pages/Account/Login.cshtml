@page
@model RazorEcom.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Pages/Shared/_Layout.cshtml";

}

<div class="container py-5">
    <div class="row justify-content-center align-items-center g-5">
        <!-- Cột bên trái: banner -->
        <div class="col-lg-6 text-center d-none d-lg-block">
            <img src="~/images/login-banner.svg" alt="Login Banner" class="img-fluid w-75">
            <h3 class="mt-4 fw-semibold text-primary">Chào mừng quay lại!</h3>
            <p class="text-muted">Đăng nhập để tiếp tục mua sắm và quản lý đơn hàng của bạn.</p>
        </div>

        <!-- Cột bên phải: Form đăng nhập -->
        <div class="col-md-8 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 p-4">
                <div class="card-body">
                    <h2 class="text-center fw-bold text-dark mb-4">@ViewData["Title"]</h2>

                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="example@email.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-semibold">Mật khẩu</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <!-- Remember me -->
                        <div class="form-check mb-3">
                            <input asp-for="Input.RememberMe" class="form-check-input" id="rememberMeCheck" />
                            <label asp-for="Input.RememberMe" class="form-check-label fw-semibold" for="rememberMeCheck"></label>
                        </div>

                        <!-- Submit -->
                        <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold rounded-pill mt-3">
                            <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                        </button>

                        <div class="text-center mt-4">
                            <p class="text-muted mb-0">
                                Chưa có tài khoản?
                                <a asp-page="./Register" class="text-decoration-none fw-semibold text-primary">Đăng ký ngay</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
