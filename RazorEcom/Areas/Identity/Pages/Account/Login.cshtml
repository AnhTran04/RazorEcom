@page
@model RazorEcom.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0 overflow-hidden bg-light" style="min-height: 100vh;">
    <div class="row g-0 min-vh-100">
        <!-- Left Column: Banner -->
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center position-relative bg-primary overflow-hidden">
            <div class="position-absolute w-100 h-100" style="background: linear-gradient(135deg, var(--primary-color), var(--primary-hover)); opacity: 0.9;"></div>
            <img src="https://images.unsplash.com/photo-1483985988355-763728e1935b?q=80&w=2070&auto=format&fit=crop" 
                 class="position-absolute w-100 h-100 object-fit-cover" 
                 style="mix-blend-mode: overlay; opacity: 0.4;" 
                 alt="Fashion Background">
            
            <div class="position-relative z-2 text-center text-white p-5" data-aos="fade-up">
                <div class="mb-4">
                    <i class="bi bi-bag-check-fill display-1"></i>
                </div>
                <h2 class="display-4 fw-bold mb-3">Chào Mừng Trở Lại!</h2>
                <p class="lead mb-4 opacity-75">Khám phá bộ sưu tập thời trang đẳng cấp và tận hưởng ưu đãi dành riêng cho bạn.</p>
                <div class="d-flex justify-content-center gap-3">
                    <div class="text-center">
                        <h4 class="fw-bold mb-0">10k+</h4>
                        <small class="opacity-75">Khách hàng</small>
                    </div>
                    <div class="vr bg-white opacity-50"></div>
                    <div class="text-center">
                        <h4 class="fw-bold mb-0">500+</h4>
                        <small class="opacity-75">Sản phẩm</small>
                    </div>
                </div>
            </div>
            
            <!-- Decorative Circles -->
            <div class="position-absolute top-0 start-0 translate-middle rounded-circle bg-white opacity-10" style="width: 300px; height: 300px; filter: blur(50px);"></div>
            <div class="position-absolute bottom-0 end-0 translate-middle rounded-circle bg-warning opacity-10" style="width: 400px; height: 400px; filter: blur(60px);"></div>
        </div>

        <!-- Right Column: Form -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center bg-white">
            <div class="w-100 p-4 p-lg-5" style="max-width: 550px;" data-aos="fade-left">
                <div class="text-center mb-5">
                    <h3 class="fw-bold text-primary mb-2">Đăng Nhập</h3>
                    <p class="text-muted">Nhập thông tin đăng nhập của bạn để tiếp tục.</p>
                </div>

                <form id="account" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm mb-4 rounded-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control bg-light border-0 rounded-3" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-muted">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small ms-1"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Password" class="form-control bg-light border-0 rounded-3" placeholder="Password" />
                        <label asp-for="Input.Password" class="text-muted">Mật khẩu</label>
                        <span asp-validation-for="Input.Password" class="text-danger small ms-1"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label text-muted small">
                                Ghi nhớ đăng nhập
                            </label>
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary text-decoration-none small fw-semibold">Quên mật khẩu?</a>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-primary w-100 btn-lg rounded-pill fw-bold shadow-lg hover-lift mb-4">
                        Đăng Nhập
                    </button>

                    <div class="text-center">
                        <p class="text-muted mb-0">
                            Chưa có tài khoản? 
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold text-decoration-none">Đăng ký ngay</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}