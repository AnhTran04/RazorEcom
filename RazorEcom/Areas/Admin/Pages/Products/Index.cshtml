@page
@using System.Globalization
@model RazorEcom.Areas.Admin.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    Layout = "_AdminLayout";
    var culture = new CultureInfo("vi-VN");
}

<div class="container-fluid p-0">
    
    <!-- Header & Toolbar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-light mb-1">@ViewData["Title"]</h2>
            <p class="text-muted small m-0">Quản lý danh sách sản phẩm và biến thể kho hàng</p>
        </div>
        
        <div class="d-flex gap-2">
            <!-- Nút Import (Mở Modal) -->
            <button type="button" class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#importModal">
                <i class="bi bi-cloud-upload me-2"></i>Nhập Excel
            </button>

            <!-- Nút Export -->
            <form method="post" asp-page-handler="Export" class="mb-0">
                <button type="submit" class="btn btn-outline-success">
                    <i class="bi bi-file-earmark-excel me-2"></i>Xuất Excel
                </button>
            </form>

            <!-- Nút Tạo mới -->
            <a asp-page="./Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Thêm mới
            </a>
        </div>
    </div>

    <!-- Thông báo lỗi/thành công từ TempData -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Main Content Card -->
    <div class="card bg-dark text-light border-secondary shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover mb-0 align-middle">
                    <thead class="table-secondary text-uppercase small fw-bold">
                        <tr>
                            <th style="width: 5%;">#ID</th>
                            <th style="width: 30%;">Sản phẩm / SKU</th>
                            <th style="width: 15%;">Danh mục</th>
                            <th style="width: 15%;">Giá bán</th>
                            <th style="width: 10%;">Tồn kho</th>
                            <th style="width: 10%;">Biến thể</th>
                            <th style="width: 10%;">Trạng thái</th>
                            <th style="width: 5%;" class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @if (Model.Product != null && Model.Product.Count > 0)
                        {
                            @foreach (var item in Model.Product)
                            {
                                // Tính toán dữ liệu hiển thị từ các biến thể
                                var variants = item.Variants ?? new List<RazorEcom.Models.ProductVariants>();
                                var totalStock = variants.Sum(v => v.Quantity);
                                var minPrice = variants.Any() ? variants.Min(v => v.Price) : 0;
                                var maxPrice = variants.Any() ? variants.Max(v => v.Price) : 0;
                                var variantCount = variants.Count;

                                <tr>
                                    <td class="text-muted">#@item.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" class="rounded me-3 object-fit-cover" width="40" height="40" alt="@item.Name" />
                                            }
                                            else
                                            {
                                                <div class="bg-secondary rounded me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="bi bi-image text-white-50"></i>
                                                </div>
                                            }
                                            <div>
                                                <div class="fw-bold">@item.Name</div>
                                                <small class="text-muted">@item.Brand</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary bg-opacity-50 border border-secondary text-light">
                                            @(item.Category?.Name ?? "N/A")
                                        </span>
                                    </td>
                                    <td>
                                        @if (minPrice == maxPrice)
                                        {
                                            <span class="text-success fw-bold">@minPrice.ToString("C0", culture)</span>
                                        }
                                        else
                                        {
                                            <div class="d-flex flex-column">
                                                <small class="text-muted">Từ: @minPrice.ToString("C0", culture)</small>
                                                <small class="text-success fw-bold">Đến: @maxPrice.ToString("C0", culture)</small>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @if (totalStock > 0)
                                        {
                                            <span class="fw-bold">@totalStock</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger fw-bold">0</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge rounded-pill bg-info text-dark">@variantCount phiên bản</span>
                                    </td>
                                    <td>
                                        @if (totalStock > 0)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Còn hàng</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i>Hết hàng</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-3 opacity-50"></i>
                                    Chưa có dữ liệu sản phẩm
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Pagination -->
        @if (Model.Product != null && Model.Product.TotalPages > 1)
        {
            <div class="card-footer bg-dark border-secondary py-3">
                <nav>
                    <ul class="pagination justify-content-center mb-0 pagination-dark">
                        <li class="page-item @(!Model.Product.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link bg-dark border-secondary text-light" asp-route-pageIndex="@(Model.Product.PageIndex - 1)">Trước</a>
                        </li>
                        @for (var i = 1; i <= Model.Product.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Product.PageIndex ? "active" : "")">
                                <a class="page-link @(i == Model.Product.PageIndex ? "bg-primary border-primary text-white" : "bg-dark border-secondary text-light")" 
                                   asp-route-pageIndex="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(!Model.Product.HasNextPage ? "disabled" : "")">
                            <a class="page-link bg-dark border-secondary text-light" asp-route-pageIndex="@(Model.Product.PageIndex + 1)">Sau</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<!-- Modal Import Excel -->
<div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content bg-dark text-light border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title" id="importModalLabel"><i class="bi bi-file-earmark-spreadsheet me-2"></i>Nhập dữ liệu từ Excel</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <div class="modal-body">
                <div class="row">
                    <!-- Cột Trái: Form Upload -->
                    <div class="col-md-6 border-end border-secondary">
                        <form method="post" enctype="multipart/form-data" asp-page-handler="Import" id="importForm">
                            <div class="mb-3">
                                <label for="fileInput" class="form-label fw-bold">1. Chọn file dữ liệu</label>
                                <input class="form-control bg-secondary text-light border-0" type="file" id="fileInput" asp-for="UploadedFile" accept=".xlsx" required>
                            </div>
                            <div class="alert alert-warning bg-opacity-10 border-warning text-warning small">
                                <i class="bi bi-exclamation-circle me-1"></i>
                                Hệ thống sẽ đọc dữ liệu bắt đầu từ <strong>dòng thứ 2</strong>.
                                Vui lòng đảm bảo <strong>ProductID (Cột A)</strong> khớp với ID sản phẩm có sẵn trên hệ thống.
                            </div>
                        </form>
                    </div>

                    <!-- Cột Phải: Hướng dẫn & Template -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">2. Định dạng mẫu</label>
                        
                        <div class="card bg-secondary bg-opacity-25 border-0 mb-3">
                            <div class="card-body p-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="small text-light">Chưa có file chuẩn?</span>
                                    <form method="post" asp-page-handler="DownloadTemplate" class="mb-0">
                                        <button type="submit" class="btn btn-sm btn-info fw-bold">
                                            <i class="bi bi-download me-1"></i> Tải File Mẫu
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive border border-secondary rounded">
                            <table class="table table-bordered table-dark mb-0 format-table text-center" style="font-size: 0.85rem;">
                                <thead>
                                    <tr>
                                        <th>A (ID)</th>
                                        <th>...</th>
                                        <th>F (SKU)</th>
                                        <th>G (Size)</th>
                                        <th>H (Màu)</th>
                                        <th>I (Giá)</th>
                                        <th>J (SL)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-warning fw-bold">101</td>
                                        <td>...</td>
                                        <td>A-01</td>
                                        <td>L</td>
                                        <td>Đỏ</td>
                                        <td>200000</td>
                                        <td>50</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <!-- Submit form bằng JS vì button nằm ngoài form -->
                <button type="submit" form="importForm" class="btn btn-primary px-4">
                    <i class="bi bi-upload me-2"></i>Tiến hành Import
                </button>
            </div>
        </div>
    </div>
</div>