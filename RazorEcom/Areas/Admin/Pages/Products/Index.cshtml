@page
@model RazorEcom.Areas.Admin.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    Layout = "_AdminLayout"; 
}
<link href="~/css/site.css" rel="stylesheet" />
<div class="d-flex justify-content-between align-items-center mb-3">
    
    <!-- 1. Nút Tạo mới -->
    <div>
        <a asp-page="./Create" class="btn btn-primary"><i class="bi bi-plus-circle me-2"></i>Tạo mới</a>
    </div>

    <!-- 2. Các nút Export/Import -->
    <div class="d-flex gap-2">
        
        <!-- Nút Export -->
        <form method="post" asp-page-handler="Export" class="mb-0">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-file-earmark-excel me-2"></i>Xuất Excel
            </button>
        </form>

        <!-- Form Import -->
        <!-- Quan trọng: enctype="multipart/form-data" -->
        <form method="post" asp-page-handler="Import" enctype="multipart/form-data" class="mb-0 d-flex gap-2">
            <input type="file" name="UploadedFile" class="form-control" style="width: 250px;" required />
            <button type="submit" class="btn btn-info text-white">
                <i class="bi bi-upload me-2"></i>Import
            </button>
        </form>
        
    </div>
</div>
<table class="table table-bordered bgdark text-light">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên sản phẩm</th>
            <th>Danh mục</th>
            <th>Thương hiệu</th>
            <th>Size</th>
            <th>Màu</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>Giá tiền</th>
            <th>Số lượng</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Product)
        {
            <tr class="table-primary">
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Category.Name</td>
                <td>@product.Brand</td>
                <td></td>
                <td></td>
                <td>@(product.Status == "active" ? "Hoạt động" : "Ngưng")</td>
                <td>@product.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td></td>
                <td></td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Sửa</a>
                </td>
            </tr>

            @* Hiển thị các variant của sản phẩm này *@
            @foreach (var variant in product.Variants)
            {
                <tr class="table-secondary">
                    <td></td> <!-- bỏ trống ID của product -->
                    <td>@product.Name</td>
                    <td>@product.Category.Name</td>
                    <td>@product.Brand</td>
                    <td>@variant.Size</td>
                    <td>@variant.Color</td>
                    <td>@(product.Status == "active" ? "Hoạt động" : "Ngưng")</td>
                    <td>@product.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>@variant.Price.ToString("C0",System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</td>
                    <td>@variant.Quantity</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@variant.Id" class="btn btn-sm btn-detail">Chi Tiết</a>
                        <a asp-page="./EditVariant" asp-route-id="@variant.Id" class="btn btn-sm btn-info">Sửa</a>
                        <a asp-page="./DeleteVariant" asp-route-id="@variant.Id" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/product.js"></script>
