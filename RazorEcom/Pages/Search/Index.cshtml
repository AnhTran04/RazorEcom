@page
@model RazorEcom.Pages.SearchModel
@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    // Định dạng tiền tệ
    var culture = new System.Globalization.CultureInfo("vi-VN");
}

<div class="container mt-4">
    
    @if (!string.IsNullOrEmpty(Model.q))
    {
        <h1 class="mb-4">Kết quả tìm kiếm cho: <span class="text-primary">"@Model.q"</span></h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        
        @if (Model.SearchResults.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                @foreach (var variant in Model.SearchResults)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="@(variant.ImageUrl ?? "https://placehold.co/300x300?text=No+Image")" class="card-img-top" alt="@variant.Product.Name">
                            <div class="card-body">
                                <h5 class="card-title">@variant.Product.Name</h5>
                                <p class="card-text text-muted small">
                                    @string.Join(" - ", new[] { variant.Size, variant.Color }.Where(s => !string.IsNullOrEmpty(s)))
                                </p>
                                <p class="card-text fs-5 fw-bold text-danger">
                                    @variant.Price.ToString("C0", culture)
                                </p>
                            </div>
                            <div class="card-footer bg-white border-top-0 pb-3">
                                <!-- Form thêm vào giỏ hàng -->
                                <form method="post" asp-page-handler="AddToCart">
                                    <input type="hidden" name="variantId" value="@variant.Id" />
                                    <button type="submit" class="btn btn-primary w-100">
                                        Thêm vào giỏ
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                Không tìm thấy sản phẩm nào phù hợp với từ khóa của bạn.
            </div>
        }
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Vui lòng nhập từ khóa để tìm kiếm.
        </div>
    }

</div>