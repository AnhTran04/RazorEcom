@using Microsoft.AspNetCore.Identity
@using RazorEcom.Data
<!--
    CHỈNH SỬA "RazorEcom.Data"
    thành namespace chứa ApplicationUser của bạn nếu cần
-->
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <!-- NẾU ĐÃ ĐĂNG NHẬP -->
    <!-- Icon Giỏ hàng (Giữ nguyên) -->
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-page="/Cart/Index" title="Giỏ hàng">
            <i class="bi bi-cart fs-5"></i>
        </a>
    </li>

    <!-- THAY ĐỔI: Chuyển icon profile thành Dropdown -->
    <li class="nav-item dropdown">
        <!-- Nút bấm dropdown là icon profile -->
        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Tài khoản">
            <i class="bi bi-person-circle fs-5"></i>
        </a>

        <!-- Menu xổ xuống (căn lề phải với dropdown-menu-end) -->
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
            <li>
                <a class="dropdown-item" asp-area="" asp-page="/User/Account/Profile">
                    <i class="bi bi-person-fill me-2"></i> Thông tin cá nhân
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-area="" asp-page="/User/OrderDetail">
                    <i class="bi bi-box-seam me-2"></i> Đơn hàng của tôi
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-area="" asp-page="/User/Account/PaymentMethods">
                    <i class="bi bi-credit-card me-2"></i> Phương thức thanh toán
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <!-- Nút Đăng xuất PHẢI là một form POST -->
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                    <button type="submit" class="dropdown-item text-danger">
                        <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <!-- NẾU CHƯA ĐĂNG NHẬP -->
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
    </li>
}

