@using Microsoft.AspNetCore.Identity
@using Microsoft.Identity.Client
@using RazorEcom.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole("Admin"))
        {
           <li class="nav-item me-2">
                <!-- Thêm class text-warning để làm nổi bật link Admin -->
                <a class="nav-link text-warning" asp-area="Admin" asp-page="/Products/Index" title="Quản lý Admin">
                    <i class="bi bi-gear-wide-connected fs-5"></i>
                    <!-- Ẩn chữ "Quản lý" trên màn hình nhỏ (chỉ hiện icon) -->
                    <span class="d-none d-lg-inline">Quản lý</span>
                </a>
            </li>
        }
        <!-- Menu Dropdown Profile (Giữ nguyên) -->
        <li class="nav-item me-2">
            <a class = "nav-link" asp-page="/Cart/Index" title="Giỏ hàng">
                <i class="bi bi-cart fs-5"></i>
            </a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Tài khoản">
                <i class="bi bi-person-circle fs-5"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-light dropdown-menu-end" aria-labelledby="profileDropdown">
                <li><h6 class="dropdown-header">Chào, @(UserManager.GetUserName(User))</h6></li>
                <li><a class="dropdown-item" asp-page="/Account/Profile"><i class="bi bi-person-fill me-2"></i>Thông tin cá nhân</a></li>
                <li><a class="dropdown-item" asp-page="/Account/AddressBook"><i class="bi bi-geo-alt-fill me-2"></i>Sổ địa chỉ</a></li>
                <li><a class="dropdown-item" asp-page="/Account/Order"><i class="bi bi-box-seam-fill me-2"></i>Đơn hàng của tôi</a></li>
                <li><a class="dropdown-item" asp-page="/Identity/Account/Manage/ChangePassword"><i class="bi bi-key-fill me-2"></i>Đổi mật khẩu</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <!-- Người dùng chưa đăng nhập -->
        <li class="nav-item"> <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a> </li>
        <li class="nav-item"> <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a> </li>
    }
</ul>

