@page
@model RazorEcom.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero / Banner -->
<div class="position-relative w-100">
    <img src="/images/Banner_Home_Page.png" class="w-100" style="height:500px;object-fit:cover;" />
</div>

<!-- Featured Products -->
<div class="container py-5">
    <h2 class="fw-bold text-light mb-4">Sản phẩm nổi bật</h2>
    <div class="row g-4">
        @foreach (var variant in Model.FeaturedVariants)
        {
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <img src="@variant.ImageUrl" class="card-img-top" alt="@variant.Product.Name" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@variant.Product.Name</h5>
                        <p class="card-text text-warning fw-semibold">@variant.Price.ToString("C0")</p>
                        <a asp-page="/Products/Detail" asp-route-id="@variant.ProductId" class="btn btn-primary mt-auto rounded-pill">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Categories -->
<div class="container py-5">
    <h2 class="fw-bold text-light mb-4">Danh mục</h2>
    <div class="row g-3">
        @foreach (var category in Model.Categories)
        {
            <div class="col-md-3">
                <div class="card bg-dark h-100 text-center p-3 rounded-4 shadow-sm">
                    <h5 class="fw-semibold text-primary">@category.Name</h5>
                    <p class="text-muted small">@category.Description</p>
                    <a asp-page="/Products/Index" asp-route-categoryId="@category.Id" class="btn btn-outline-primary rounded-pill mt-auto">
                        Xem sản phẩm
                    </a>
                </div>
            </div>
        }
    </div>
</div>

