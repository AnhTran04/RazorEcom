@page
@model RazorEcom.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    var culture = new System.Globalization.CultureInfo("vi-VN");
}

<div class="container py-5">
    <div class="d-flex align-items-center gap-3 mb-5">
        <h1 class="fw-bold display-5 mb-0">Giỏ Hàng</h1>
        <span class="badge bg-light text-dark rounded-pill border fs-6 px-3 py-2">@Model.CartItems.Count sản phẩm</span>
    </div>

    @if (Model.CartItems.Any())
    {
        <div class="row g-5">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="d-flex flex-column gap-4">
                    @foreach (var item in Model.CartItems)
                    {
                        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                            <div class="card-body p-4">
                                <div class="row align-items-center g-4">
                                    <!-- Image -->
                                    <div class="col-md-2 col-3">
                                        <div class="bg-light rounded-3 p-2">
                                            <img src="@item.ImageUrl"
                                                 class="img-fluid rounded-3"
                                                 alt="@item.ProductName"
                                                 style="aspect-ratio: 1/1; object-fit: cover;"
                                                 onerror="this.src='https://placehold.co/100x100/f3f4f6/9ca3af?text=Error'" />
                                        </div>
                                    </div>

                                    <!-- Info -->
                                    <div class="col-md-4 col-9">
                                        <h5 class="fw-bold mb-1">
                                            <a href="#" class="text-dark text-decoration-none hover-primary">@item.ProductName</a>
                                        </h5>
                                        <p class="text-muted small mb-2">@item.VariantInfo</p>
                                        <p class="text-primary fw-bold mb-0">@item.UnitPrice.ToString("C0", culture)</p>
                                    </div>

                                    <!-- Quantity -->
                                    <div class="col-md-3 col-6">
                                        <form method="post" asp-page-handler="UpdateQuantity" class="d-flex align-items-center bg-light rounded-pill p-1" style="width: fit-content;">
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <button type="button" class="btn btn-sm btn-link text-muted border-0 p-2" onclick="this.nextElementSibling.stepDown(); this.form.submit()">
                                                <i class="bi bi-dash"></i>
                                            </button>
                                            <input type="number"
                                                   name="newQuantity"
                                                   class="form-control form-control-sm border-0 bg-transparent text-center fw-bold p-0"
                                                   value="@item.Quantity"
                                                   min="1"
                                                   max="@item.MaxQuantity"
                                                   style="width: 40px;"
                                                   onchange="this.form.submit()" />
                                            <button type="button" class="btn btn-sm btn-link text-muted border-0 p-2" onclick="this.previousElementSibling.stepUp(); this.form.submit()">
                                                <i class="bi bi-plus"></i>
                                            </button>
                                        </form>
                                    </div>

                                    <!-- Total & Remove -->
                                    <div class="col-md-3 col-6 text-end">
                                        <h5 class="fw-bold text-dark mb-2">@item.TotalItemPrice.ToString("C0", culture)</h5>
                                        <form method="post" asp-page-handler="RemoveItem">
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <button type="submit" class="btn btn-link text-danger text-decoration-none p-0 small hover-opacity">
                                                <i class="bi bi-trash me-1"></i> Xóa
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                <div class="mt-4">
                    <a asp-page="/Products/Index" class="btn btn-outline-primary rounded-pill px-4 fw-bold">
                        <i class="bi bi-arrow-left me-2"></i> Tiếp tục mua sắm
                    </a>
                </div>
            </div>

            <!-- Summary -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-lg rounded-4 p-4 position-sticky" style="top: 100px;">
                    <h4 class="fw-bold mb-4">Tóm tắt đơn hàng</h4>
                    
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Tạm tính</span>
                        <span class="fw-bold">@Model.TotalPrice.ToString("C0", culture)</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Phí vận chuyển</span>
                        <span class="text-success fw-bold">Miễn phí</span>
                    </div>
                    
                    <hr class="my-4 opacity-10">
                    
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="fw-bold fs-5">Tổng cộng</span>
                        <span class="fw-bold fs-4 text-primary">@Model.TotalPrice.ToString("C0", culture)</span>
                    </div>

                    <a asp-page="/Checkout/Index" class="btn btn-primary w-100 rounded-pill py-3 fw-bold shadow-sm hover-shadow-lg transition-all">
                        Tiến hành thanh toán
                    </a>

                    <div class="mt-4 text-center">
                        <small class="text-muted d-block mb-2">Chúng tôi chấp nhận</small>
                        <div class="d-flex justify-content-center gap-2 opacity-50">
                            <i class="bi bi-credit-card-2-front fs-4"></i>
                            <i class="bi bi-wallet2 fs-4"></i>
                            <i class="bi bi-cash-coin fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4 text-muted opacity-25">
                <i class="bi bi-cart-x display-1"></i>
            </div>
            <h3 class="fw-bold mb-3">Giỏ hàng trống</h3>
            <p class="text-muted mb-4">Bạn chưa có sản phẩm nào trong giỏ hàng.</p>
            <a asp-page="/Products/Index" class="btn btn-primary btn-lg rounded-pill px-5 fw-bold shadow-sm">
                Khám phá ngay
            </a>
        </div>
    }
</div>

<script src="~/js/cart.js"></script>