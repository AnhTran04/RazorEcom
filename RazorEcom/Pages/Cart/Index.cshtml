@page
@model RazorEcom.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    // Sử dụng CultureInfo của Việt Nam để định dạng tiền tệ
    var culture = new System.Globalization.CultureInfo("vi-VN");
}
<link href="~/css/site.css" rel="stylesheet" />
<div class="container py-5">
    <h1 class="fw-bold text mb-4">@ViewData["Title"]</h1>

    <div class="row g-5">
        <!-- Cột bên trái: Danh sách sản phẩm -->
        <div class="col-lg-8">
            @if (Model.CartItems.Any())
            {
                <div class="card shadow-sm rounded-4 text p-3">
                    <div class="card-body">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="row g-3 align-items-center mb-4">
                                <!-- Ảnh -->
                                <div class="col-md-2 col-3">
                                    <img src="@item.ImageUrl"
                                         class="img-fluid rounded-3"
                                         alt="@item.ProductName"
                                         style="width: 100px; height: 100px; object-fit: cover;"
                                         onerror="this.src='https://placehold.co/100x100/212529/FFF?text=Error'" />
                                </div>

                                <!-- Tên và Biến thể -->
                                <div class="col-md-4 col-9">
                                    <h5 class="fw-semibold mb-1">@item.ProductName</h5>
                                    <p class="text-muted small mb-1">@item.VariantInfo</p>
                                    <p class="text-warning fw-semibold mb-0">@item.UnitPrice.ToString("C0", culture)</p>
                                </div>

                                <!-- Số lượng (Form cập nhật) -->
                                <div class="col-md-3 col-7">
                                    <form method="post" asp-page-handler="UpdateQuantity" class="d-flex">
                                        <input type="hidden" name="cartItemId" value="@item.Id" />
                                        <input type="number"
                                               name="newQuantity"
                                               class="form-control form-control-sm text"
                                               value="@item.Quantity"
                                               min="1"
                                               max="@item.MaxQuantity"
                                               style="width: 70px;" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary ms-2" title="Cập nhật">
                                            <i class="bi bi-arrow-repeat"></i>
                                        </button>
                                    </form>
                                </div>

                                <!-- Giá tổng và Nút xóa -->
                                <div class="col-md-3 col-5 text-end">
                                    <h6 class="fw-semibold text-warning">@item.TotalItemPrice.ToString("C0", culture)</h6>

                                    <!-- Form xóa sản phẩm -->
                                    <form method="post" asp-page-handler="RemoveItem">
                                        <input type="hidden" name="cartItemId" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa sản phẩm">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            @if (!Model.CartItems.Last().Equals(item))
                            {
                                <hr class="border-secondary" />
                            }
                        }
                    </div>
                </div>
            }
            else
            {
                <!-- THAY ĐỔI Ở ĐÂY -->
                <div class="alert alert-secondary text border-secondary d-flex justify-content-between align-items-center">
                    <span>Giỏ hàng của bạn đang trống.</span>
                    <a asp-page="/Products/Index" class="btn btn-primary rounded-pill">Tiếp tục mua sắm</a>
                </div>
            }
        </div>

        <!-- Cột bên phải: Tóm tắt đơn hàng -->
        @if (Model.CartItems.Any())
        {
            <div class="col-lg-4">
                <div class="card shadow-sm rounded-4 text p-3 position-sticky" style="top: 2rem;">
                    <div class="card-body">
                        <h4 class="card-title fw-bold mb-4">Tóm tắt đơn hàng</h4>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Tạm tính</span>
                            <span class="fw-semibold">@Model.TotalPrice.ToString("C0", culture)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Phí vận chuyển</span>
                            <span class="fw-semibold">Miễn phí</span>
                        </div>
                        <hr class="border-secondary" />
                        <div class="d-flex justify-content-between fw-bold fs-5 mb-4">
                            <span>Tổng cộng</span>
                            <span class="text-warning">@Model.TotalPrice.ToString("C0", culture)</span>
                        </div>

                        <a asp-page="/Checkout/Index" class="btn btn-primary btn-lg w-100 rounded-pill fw-semibold">
                            Tiến hành thanh toán
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script src="cart.js"></script>