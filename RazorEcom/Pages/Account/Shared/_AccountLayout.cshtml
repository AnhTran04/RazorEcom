@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    var activePage = ViewContext.RouteData.Values["page"]?.ToString();
}
<link href="~/css/site.css" rel="stylesheet" />

<div class="container py-5 text-light">
    <div class="row">
            <!-- Sidebar Điều hướng -->
            <div class="col-md-3">
                <div class="card border-secondary rounded-4 p-3">
                    <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">

                        <!-- Liên kết Trang cá nhân (Active) -->
                        <a class="nav-link text @(activePage?.Contains("/account/profile") == true ? "active bg-primary text" : "")" asp-page="/Account/Profile">
                            <i class="bi bi-person-fill me-2"></i> Thông tin cá nhân
                        </a>

                        <!-- Liên kết đến Trang Đơn hàng -->
                    <a class="nav-link text @(activePage != null && activePage.Contains("/account/order") ? "active bg-primary text" : "")" asp-page="/Account/Order">
                            <i class="bi bi-box-seam me-2"></i> Đơn hàng của tôi
                        </a>

                        <!-- Liên kết đến Sổ địa chỉ -->
                    <a class="nav-link text @(activePage != null && activePage.Contains("/account/addressbook") ? "active bg-primary text" : "")" asp-page="/Account/AddressBook">
                            <i class="bi bi-journal-bookmark me-2"></i> Sổ địa chỉ
                        </a>
                        <!-- Liên kết đến Đổi mật khẩu -->
                    <a class="nav-link text @(activePage != null && activePage.Contains("/account/ChangePassword") ? "active bg-primary text" : "")" asp-page="/Account/ChangePassword">
                            <i class="bi bi-key-fill me-2"></i> Đổi mật khẩu
                        </a>
                        <!-- Nút Đăng xuất -->
                        <hr class="border-secondary">
                        <form method="post" asp-page-handler="Logout" class="w-100">
                            <button type="submit" class="nav-link text-danger w-100 text-start">
                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Nội dung chính -->
            <div class="col-md-9">
                @RenderBody()
            </div>
    
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
}
