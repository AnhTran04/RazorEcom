@page
@model RazorEcom.Pages.Checkout.CartModel
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold display-5 mb-2">Thanh Toán</h1>
        <p class="text-muted">Hoàn tất đơn hàng của bạn một cách an toàn</p>
    </div>

    <form method="post">
        <div class="row g-5">
            <!-- Left Column: Shipping & Payment -->
            <div class="col-lg-7">
                <!-- Shipping Info -->
                <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                    <div class="card-header bg-white border-bottom p-4">
                        <h4 class="fw-bold mb-0"><i class="bi bi-geo-alt-fill text-primary me-2"></i> Thông tin vận chuyển</h4>
                    </div>
                    <div class="card-body p-4">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="SelectedAddressId" class="form-label fw-bold text-muted small text-uppercase letter-spacing-1">Địa chỉ giao hàng</label>
                            <select asp-for="SelectedAddressId" asp-items="Model.ShippingAddresses" class="form-select form-select-lg bg-light border-0 fw-semibold">
                                <option value="">-- Chọn địa chỉ --</option>
                            </select>
                            <span asp-validation-for="SelectedAddressId" class="text-danger small"></span>
                            
                            <div class="mt-3">
                                <a asp-page="/Account/AddressBook" class="btn btn-outline-primary btn-sm rounded-pill fw-bold">
                                    <i class="bi bi-plus-lg me-1"></i> Thêm địa chỉ mới
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Method -->
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="card-header bg-white border-bottom p-4">
                        <h4 class="fw-bold mb-0"><i class="bi bi-credit-card-2-front-fill text-primary me-2"></i> Phương thức thanh toán</h4>
                    </div>
                    <div class="card-body p-4">
                        <label class="form-label fw-bold text-muted small text-uppercase letter-spacing-1 mb-3">Chọn phương thức</label>
                        
                        <div class="d-flex flex-column gap-3">
                            <!-- COD -->
                            <label class="card p-3 border rounded-3 cursor-pointer hover-border-primary transition-all">
                                <div class="d-flex align-items-center">
                                    <div class="form-check">
                                        <input asp-for="PaymentMethod" type="radio" value="COD" id="paymentCod" class="form-check-input" checked />
                                    </div>
                                    <div class="ms-3 flex-grow-1">
                                        <span class="fw-bold d-block">Thanh toán khi nhận hàng (COD)</span>
                                        <small class="text-muted">Thanh toán bằng tiền mặt khi nhận hàng.</small>
                                    </div>
                                    <i class="bi bi-cash-stack fs-3 text-muted"></i>
                                </div>
                            </label>

                            <!-- VNPAY -->
                            <label class="card p-3 border rounded-3 cursor-pointer hover-border-primary transition-all bg-light opacity-75">
                                <div class="d-flex align-items-center">
                                    <div class="form-check">
                                        <input asp-for="PaymentMethod" type="radio" value="VNPAY" id="paymentVnpay" class="form-check-input" disabled />
                                    </div>
                                    <div class="ms-3 flex-grow-1">
                                        <span class="fw-bold d-block text-muted">VNPAY (Sắp ra mắt)</span>
                                        <small class="text-muted">Thanh toán qua ví điện tử hoặc ngân hàng.</small>
                                    </div>
                                    <i class="bi bi-qr-code-scan fs-3 text-muted"></i>
                                </div>
                            </label>
                        </div>
                        <span asp-validation-for="PaymentMethod" class="text-danger small mt-2 d-block"></span>
                    </div>
                </div>
            </div>

            <!-- Right Column: Order Summary -->
            <div class="col-lg-5">
                <div class="card border-0 shadow-lg rounded-4 p-4 position-sticky" style="top: 100px;">
                    <h4 class="fw-bold mb-4">Đơn hàng của bạn</h4>

                    <!-- Items List -->
                    <div class="cart-summary-items mb-4 pe-2" style="max-height: 300px; overflow-y: auto;">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="d-flex align-items-center mb-3 pb-3 border-bottom border-light">
                                <div class="position-relative">
                                    <img src="@(item.Variant.ImageUrl ?? "https://placehold.co/60x60/f3f4f6/9ca3af?text=IMG")"
                                         alt="@item.Variant.Product.Name"
                                         class="rounded-3 shadow-sm"
                                         style="width: 64px; height: 64px; object-fit: cover;"
                                         onerror="this.src='https://placehold.co/64x64/f3f4f6/9ca3af?text=IMG'">
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary border border-white text-white" style="font-size: 0.7rem;">
                                        @item.Quantity
                                    </span>
                                </div>

                                <div class="ms-3 flex-grow-1">
                                    <h6 class="mb-0 fw-bold text-truncate" style="max-width: 150px;">@item.Variant.Product.Name</h6>
                                    <small class="text-muted d-block">@item.Variant.Size / @item.Variant.Color</small>
                                </div>
                                <span class="fw-bold text-dark">@((item.Variant.Price * item.Quantity).ToString("C0"))</span>
                            </div>
                        }
                    </div>

                    <!-- Totals -->
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Tạm tính</span>
                        <span class="fw-bold">@Model.TotalPrice.ToString("C0")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="text-muted">Phí vận chuyển</span>
                        <span class="text-success fw-bold">Miễn phí</span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded-3 mb-4">
                        <span class="fw-bold fs-5">Tổng cộng</span>
                        <span class="fw-bold fs-4 text-primary">@Model.TotalPrice.ToString("C0")</span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill py-3 fw-bold shadow-sm hover-shadow-lg transition-all">
                        <i class="bi bi-lock-fill me-2"></i> Đặt hàng ngay
                    </button>

                    <div class="mt-3 text-center">
                        <a asp-page="/Cart/Index" class="text-muted text-decoration-none small hover-primary">
                            <i class="bi bi-arrow-left me-1"></i> Quay lại giỏ hàng
                        </a>
                    </div>
                    
                    <div class="mt-4 pt-3 border-top text-center text-muted small">
                        <i class="bi bi-shield-lock-fill me-1"></i> Thông tin của bạn được bảo mật an toàn
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
