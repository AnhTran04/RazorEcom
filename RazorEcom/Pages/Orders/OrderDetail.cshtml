@page "{id:int}"
@model RazorEcom.Pages.Orders.DetailModel
@{
    ViewData["Title"] = $"Chi tiết Đơn hàng #{Model.Order?.Id}";
    Layout = "~/Pages/Account/Shared/_Layout.cshtml";
}


    <!-- Nội dung chính: Chi tiết đơn hàng -->
    <div class="col-md-9">
        @if (Model.Order != null)
        {
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">@ViewData["Title"]</h2>
                <a asp-page="./User/OrderDetail" class="btn btn-outline-light">&larr; Quay lại danh sách</a>
            </div>

            <div class="row g-4">
                <!-- Cột Thông tin chung -->
                <div class="col-lg-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">Thông tin giao hàng</h5>
                        </div>
                        <div class="card-body">
                            <h6 class="fw-semibold">Giao tới:</h6>
                            <p class="mb-1"><strong>@Model.Order.ShippingAddress.FullName</strong></p>
                            <p class="mb-1">@Model.Order.ShippingAddress.Phone</p>
                            <p class="mb-0">
                                @Model.Order.ShippingAddress.AddressLine, @Model.Order.ShippingAddress.Ward, @Model.Order.ShippingAddress.District, @Model.Order.ShippingAddress.City
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Cột Trạng thái & Thanh toán -->
                <div class="col-lg-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">Trạng thái đơn hàng</h5>
                        </div>
                        <div class="card-body">
                            <h6 class="fw-semibold">Trạng thái:</h6>
                            <p>
                                <span class="badge fs-6 @(Model.Order.Status.ToLower() == "pending" ? "bg-warning text-dark" : (Model.Order.Status.ToLower() == "completed" ? "bg-success" : (Model.Order.Status.ToLower() == "shipped" ? "bg-info text-dark" : "bg-danger")))">
                                    @Model.Order.Status
                                </span>
                            </p>

                            <h6 class="fw-semibold mt-3">Thanh toán:</h6>
                            @if (Model.Order.Payment != null)
                            {
                                <p class="mb-1"><strong>Phương thức:</strong> @Model.Order.Payment.Method</p>
                                <p class="mb-0"><strong>Tình trạng:</strong> @Model.Order.Payment.Status</p>
                            }
                            else
                            {
                                <p class="text-muted">Chưa có thông tin thanh toán.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Danh sách OrderItem -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Các sản phẩm trong đơn</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-borderless align-middle mb-0">
                            <thead>
                                <tr>
                                    <th scope="col" style="width: 50%;">Sản phẩm</th>
                                    <th scope="col">Biến thể</th>
                                    <th scope="col">Số lượng</th>
                                    <th scope="col">Giá lúc mua</th>
                                    <th scope="col">Ngày tạo</th>
                                    <th scope="col">Ngày cập nhật</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Order.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@item.Variant.ImageUrl" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;" alt="@item.Variant.Product.Name" />
                                                <div>
                                                    <h6 class="mb-0">@item.Variant.Product.Name</h6>
                                                    <small class="text-muted">SKU: @item.Variant.Sku</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Variant.Size))
                                            {
                                                <span class_="badge bg-secondary">@item.Variant.Size</span>
                                            }
                                            @if (!string.IsNullOrEmpty(item.Variant.Color))
                                            {
                                                <span class="badge bg-secondary">@item.Variant.Color</span>
                                            }
                                            @if (!string.IsNullOrEmpty(item.Variant.Material))
                                            {
                                                <span class="badge bg-secondary">@item.Variant.Material</span>
                                            }
                                        </td>
                                        <td>x @item.Quantity</td>
                                        <td>@item.UnitPrice.ToString("C0")</td>
                                        <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-dark text-end">
                    <h4 class="mb-0 text-warning fw-bold">Tổng cộng: @Model.Order.Total.ToString("C0")</h4>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                Không tìm thấy đơn hàng.
            </div>
        }
    </div>
</div>

